void main() {
  background(0,0,0);
  tablero ();
  animate(dibuja);
}
void circle(double x, double y) {
   ellipse(x,y, 50,50);
}
void tablero (){
 for ( int a = 0 ; a < 3 ; a++ ) {
    noStroke();
    fill(255,255,255);
	  circle(80,80+80*a);
      for ( int i = 0 ; i < 3 ; i++ ) {
	  	circle(80+80*i,80+80*a);
  		}
 }
}
